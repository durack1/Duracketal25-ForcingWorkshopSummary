	keywords = {land use, IPCC, Agricultural development, cropland, DGVM, EMIC, ESM, historical population, human impact, pasture},
	pages = {73--86},
	file = {Snapshot:/Users/durack1/Zotero/storage/FVPRIENA/j.1466-8238.2010.00587.html:text/html},
