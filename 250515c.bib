	number = {LLNL-TR-501976},
	urldate = {2024-11-23},
	institution = {Lawrence Livermore National Laboratory (LLNL), Livermore, CA (United States)},
	author = {Williams, Dean N.},
	month = sep,
	year = {2011},
	doi = {10.2172/1035947},
	pages = {99},
}

