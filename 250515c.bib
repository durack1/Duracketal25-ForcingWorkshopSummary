	journal = {Earth System Science Data},
	author = {Chen, Yang and Hall, Joanne and Van Wees, Dave and Andela, Niels and Hantson, Stijn and Giglio, Louis and Van Der Werf, Guido R. and Morton, Douglas C. and Randerson, James T.},
	month = nov,
