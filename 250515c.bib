	urldate = {2024-11-05},
	journal = {Bulletin of the American Meteorological Society},
	author = {Shukla, J. and Palmer, T. N. and Hagedorn, R. and Hoskins, B. and Kinter, J. and Marotzke, J. and Miller, M. and Slingo, J.},
