	keywords = {chemical transport model, tropospheric chemistry, tropospheric ozone},
	file = {Full Text PDF:/Users/durack1/Zotero/storage/ZNMA6ZHE/Horowitz et al. - 2003 - A global simulation of tropospheric ozone and related tracers Description and evaluation of MOZART,.pdf:application/pdf;Snapshot:/Users/durack1/Zotero/storage/7ZEZX3AG/2002JD002853.html:text/html},
}

@article{olivier_description_1996,
