	number = {9},
	urldate = {2024-05-31},
	journal = {Geoscientific Model Development},
	author = {Lawrence, David M. and Hurtt, George C. and Arneth, Almut and Brovkin, Victor and Calvin, Kate V. and Jones, Andrew D. and Jones, Chris D. and Lawrence, Peter J. and De Noblet-Ducoudré, Nathalie and Pongratz, Julia and Seneviratne, Sonia I. and Shevliakova, Elena},
	month = sep,
