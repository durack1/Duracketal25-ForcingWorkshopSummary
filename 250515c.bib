	number = {24},
	urldate = {2025-05-16},
	journal = {Geophysical Research Letters},
	author = {Roach, Lettie A. and Mankoff, Kenneth D. and Romanou, Anastasia and Blanchard‐Wrigglesworth, Edward and Haine, Thomas W. N. and Schmidt, Gavin. A.},
	month = dec,
	year = {2023},
	pages = {e2023GL105948},
}

